<!-- find-info.ejs -->
<!DOCTYPE html>
<html>
<head>
  <title>Find Info</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <style>
    body {
      padding: 20px;
      background-color: rgb(248, 249, 250);
    }
    
    .container-box {
      border: 2px solid rgb(40, 167, 69);
      border-radius: 10px;
      padding: 20px;
      margin-top: 40px;
      max-width: 600px;
      margin-left: auto;
      margin-right: auto;
    }
    
    h1 {
      color: rgb(40, 167, 69);
      text-align: center;
      margin-bottom: 20px;
    }
    
    .table {
      margin-bottom: 20px;
    }
    
    .btn-submit {
      color: rgb(255, 255, 255);
      background-color: rgb(40, 167, 69);
      border-color: rgb(40, 167, 69);
      border-radius: 10px;
      width: 100%;
      height: 50px;
    }
    
    .btn-submit:hover {
      background-color: rgb(33, 136, 56);
      border-color: rgb(33, 136, 56);
    }

    .search-form {
      margin-bottom: 20px;
    }

    .result-container {
      text-align: center;
    }

    .no-result {
      color: red;
      margin-top: 20px;
    }

    .home-btn {
      position: absolute;
      top: 20px;
      right: 20px;
    }
  </style>
</head>
<body>
  <button onclick="window.location.href='/home'" class="btn btn-primary home-btn">Home</button>
  
  <div class="container">
    <h1>Find Student Info</h1>
  </div>
  
  <div class="container-box">
    <div class="search-form">
      <form method="POST" action="/find-info">
        <div class="form-group">
          <label for="name">Name:</label>
          <input type="text" id="name" name="name" class="form-control" required>
        </div>
        <button type="submit" class="btn btn-submit">Find Info</button>
      </form>
    </div>

    <div class="result-container">
      <% if (students && students.length > 0) { %>
        <h2>Student Information</h2>
        <table class="table">
          <thead>
            <tr>
              <th>Name</th>
              <th>Class</th>
              <th>Unique ID</th>
            </tr>
          </thead>
          <tbody>
            <% students.forEach((student) => { %>
              <tr>
                <td><%= student.name %></td>
                <td><%= student.class %></td>
                <td><%= student.unique_id %></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      <% } else { %>
        <p class="no-result">No students found with that name.</p>
      <% } %>
    </div>
  </div>
  
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
